{% extends 'form_div_layout.html.twig' %}

{# Javascripts #}

{% block form_javascripts %}
    {% spaceless %}
        {% for child in form %}
            {{ form_javascript(child) }}
        {% endfor %}
    {% endspaceless %}
{% endblock form_javascripts %}

{% block form_javascript %}{% endblock form_javascript %}

{% block form_libraries %}{% endblock form_libraries %}


{# Stylesheets #}

{% block form_stylesheets %}
    {% spaceless %}
        {% for child in form %}
            {{ form_stylesheet(child) }}
        {% endfor %}
    {% endspaceless %}
{% endblock form_stylesheets %}

{% block form_stylesheet %}{% endblock form_stylesheet %}


{# Help #}

{% block form_help %}
{% spaceless %}
    {% if help is defined and help is not null %}
        <span class="help">{{ help|trans }}</span>
    {% endif %}
{% endspaceless %}
{% endblock form_help %}


{# Redactor #}

{% block redactor_stylesheet %}
{% spaceless %}
    <link rel="stylesheet" type="text/css" media="screen" href="http://imperavi.com/js/redactor/redactor.css" />
{% endspaceless %}
{% endblock redactor_stylesheet %}

{% block redactor_javascript %}
{% spaceless %}
    <script type="text/javascript" src="http://imperavi.com/js/redactor/redactor.js"></script>
    {% if app.request.locale != 'en' %}
        <script type="text/javascript" src="http://imperavi.com/files/redactor/langs/{{ app.request.locale }}.js"></script>
    {% endif %}
    <script type="text/javascript">
        $(function () {
            $('#{{ id }}').redactor({{ options|raw }});
        });
    </script>
{% endspaceless %}
{% endblock redactor_javascript %}


{# Masked #}

{% block masked_javascript %}
{% spaceless %}
    <script type="text/javascript">
        $(function () {
            $('#{{ id }}').mask({{ mask }}, {{ options|raw }});
        });
    </script>
{% endspaceless %}
{% endblock masked_javascript %}